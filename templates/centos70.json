{
 "variables": {
    "headless": false,
    "iso_url": "http://mirror.stanford.edu/yum/pub/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-Minimal.iso",
    "iso_checksum": "04e99a4f1a013b95a7ebc9a90ffa9ac64d28eb9872bc193fbd7c581ec9b6a360",
    "kickstart": "centos65.ks",
    "puppetrepo": "http://yum.puppetlabs.com/puppetlabs-release-el-7.noarch.rpm"
  },
  "builders": [{
      "type": "virtualbox-iso",
      "vm_name": "centos-7.0-x86_64",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/centos7.ks<enter>"
      ],
      "boot_wait": "5s",
      "http_directory": "http",
      "disk_size": 40000,
      "guest_os_type": "RedHat_64",
      "headless": "{{ user `headless` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_wait_timeout": "20m",
      "guest_additions_path": "/tmp/linux.iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "headless": "{{ user `headless` }}"
  },
  {
      "type": "vmware-iso",
      "vm_name": "centos-7.0-x86_64",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/centos7.ks<enter>"
      ],
      "boot_wait": "5s",
      "floppy_files": ["floppy/compat_dcache.h.patch"],
      "disk_size": 40000,
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_wait_timeout": "20m",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "/tmp/{{ .Flavor }}.iso",
      "disk_type_id": "0",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1",
        "virtualHW.version": "10",
        "ethernet0.virtualDev": "vmxnet3"
      }
    }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "scripts/update.sh",
      "scripts/network.sh",
      "scripts/sudoers.sh",
      "scripts/vmtools.sh",
      "scripts/puppet.sh",
      "scripts/cleanup.sh"
    ],
    "environment_vars": [
    "PUPPET_REPO={{ user `puppetrepo` }}"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "boxes/{{.Provider}}/centos70.box"
  }]
}
